<Window x:Class="ProjectAccount.AdminLogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAccount"
        d:DataContext="{d:DesignInstance Type=local:Admin_IdentificationVM}"
        mc:Ignorable="d"
        Title="AdminLogIn" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF5F91B7">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="AccessB" Content="Confirm" Command ="{Binding IdentifyAdminCommand}" HorizontalAlignment="Left" Margin="10,280,0,0" VerticalAlignment="Top" Click="AccessB_Click" Width="86" Height="31" Background="White" BorderBrush="Black" Grid.Column="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="Clear" Content="Clear" HorizontalAlignment="Left" Margin="104,280,0,0" VerticalAlignment="Top" Click="Clear_Click" Width="86" Height="31" Grid.Column="1" BorderBrush="Black" Background="White">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="ReturnB" Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="ReturnB_Click" Height="27" Width="68" Background="White" BorderBrush="Black">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <TextBox x:Name="txt1" Text="{Binding login, UpdateSourceTrigger=PropertyChanged}" ToolTip ="{Binding RelativeSource={RelativeSource Mode=Self}, Path = (Validation.Errors)[0].ErrorContent}" HorizontalAlignment="Center" Margin="0,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="22" Grid.Column="1" FontSize="14"/>

        <Label x:Name="label_login" Content="Login" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" Grid.Column="1" Background="{x:Null}" Foreground="White" FontSize="14"/>

        <Label x:Name="label_password" Content="Password" HorizontalAlignment="Center" Margin="0,201,0,0" VerticalAlignment="Top" Grid.Column="1" RenderTransformOrigin="0.5,0.5" Width="72" Background="{x:Null}" Foreground="White" FontSize="14"/>

        <Label x:Name="main_label" Content="Authorization" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontSize="20" Grid.Column="1"/>
        <PasswordBox x:Name="pass" PasswordChanged="pass_PasswordChanged" HorizontalAlignment="Left" Margin="11,230,0,0" VerticalAlignment="Top" Height ="22" Width="180" PasswordChar="●" Grid.Column="1"/>
        <TextBox x:Name="pass1" TextChanged="pass1_PasswordChanged" Text="{Binding pswrd, UpdateSourceTrigger=PropertyChanged}" ToolTip ="{Binding RelativeSource={RelativeSource Mode=Self}, Path = (Validation.Errors)[0].ErrorContent}" HorizontalAlignment="Left" Margin="11,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height ="22" Width="180" HorizontalScrollBarVisibility="Visible" Grid.Column="1" FontSize="14" Visibility="Hidden"/>
        <Button x:Name="show_password" Content="" HorizontalAlignment="Left" Margin="0,232,0,0" VerticalAlignment="Top" Width="26" Click="show_password_Click" BorderBrush="White" RenderTransformOrigin="-8.115,-2.202" Grid.Column="2">
            <Button.Background>
                <ImageBrush ImageSource="/OpenEye.jpg"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                VerticalAlignment="Center" />
                    </Border>

                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="hide_password" Content="" HorizontalAlignment="Left" Margin="0,232,0,0" VerticalAlignment="Top" Width="26" Click="hide_password_Click" BorderBrush="White" Grid.Column="2" Visibility="Hidden">
            <Button.Background>
                <ImageBrush ImageSource="/ClosedEye.jpg"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
    BorderBrush="{TemplateBinding BorderBrush}"
    BorderThickness="{TemplateBinding BorderThickness}"
    CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
    VerticalAlignment="Center" />
                    </Border>

                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Window>
