<Window x:Class="ProjectAccount.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAccount"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF5F91B7">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="111"/>
            <ColumnDefinition Width="578"/>
            <ColumnDefinition Width="111"/>
        </Grid.ColumnDefinitions>
        
        <Button x:Name="ReturnB" Content="Log out" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="ReturnB_Click" Height="27" Width="68" Background="White" BorderBrush="Black">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        
        <Button x:Name="add_offer" Content="Add" HorizontalAlignment="Left" Margin="10,331,0,0" VerticalAlignment="Top" Width="89" Height="31" Click="add_offer_Click" Background="White" BorderBrush="Black" Grid.Column="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        
        <Button x:Name="edit_offer" Content="Edit" HorizontalAlignment="Left" Margin="104,331,0,0" VerticalAlignment="Top" Width="89" Height="31" Click="edit_offer_Click" BorderBrush="Black" Background="White" Grid.Column="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        
        <Button x:Name="remove_offer" Content="Remove" HorizontalAlignment="Left" Margin="198,331,0,0" VerticalAlignment="Top" Width="89" Height="31" Click="remove_offer_Click" BorderBrush="Black" Background="White" Grid.Column="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        
        <Button x:Name="list_offers" Content="Offers" HorizontalAlignment="Left" Margin="482,331,0,0" VerticalAlignment="Top" Width="86" Height="31" Click="list_offers_Click" BorderBrush="Black" Background="White" Grid.Column="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        
        <Button x:Name="list_deals" Content="Deals" HorizontalAlignment="Left" Margin="391,331,0,0" VerticalAlignment="Top" Width="86" Height="31" Click="list_deals_Click" Background="White" BorderBrush="Black" Grid.Column="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        
        <ListView x:Name="Listv" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" ItemsSource="{Binding Announcments}" Margin="0,116,0,164" BorderBrush="Black" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding id}" Header="ID" Width="35"/>
                    <GridViewColumn DisplayMemberBinding="{Binding nameprod}" Header="Name" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding nameprob}" Header="Problem" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding typeprob}" Header="Type problem" Width="125"/>
                    <GridViewColumn DisplayMemberBinding="{Binding state}" Header="State" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding urgency}" Header="Urgency" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <Label x:Name="main_label" Content="Label" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontSize="20" Grid.Column="1"/>
        
        <Label x:Name="announcments_label" Grid.Column="1" Content="Announcments" HorizontalAlignment="Left" Margin="97,290,0,0" VerticalAlignment="Top" Foreground="White" FontSize="14"/>
        
        <Label x:Name="activity_label" Grid.Column="1" Content="Activity" HorizontalAlignment="Left" Margin="453,290,0,0" VerticalAlignment="Top" Foreground="White" FontSize="14"/>
    
    </Grid>
</Window>
