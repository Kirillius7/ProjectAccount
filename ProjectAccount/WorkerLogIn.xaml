<Window x:Class="ProjectAccount.WorkerLogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:ProjectAccount"
        mc:Ignorable="d"
        Title="WorkerLogIn" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF5F91B7">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="AccessB" Content="Confirm" Command ="{Binding IdentifyUserCommand}" HorizontalAlignment="Left" Margin="10,280,0,0" VerticalAlignment="Top" Click="AccessB_Click" Width="86" Height="31" Grid.Column="1" Background="White" BorderBrush="Black">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="Clear" Content="Clear" HorizontalAlignment="Left" Margin="104,280,0,0" VerticalAlignment="Top" Width="86" Height="31" Click="Clear_Click" Grid.Column="1" Background="White" BorderBrush="Black">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="SignUp" Content="Sign Up" HorizontalAlignment="Center" Margin="0,345,0,0" VerticalAlignment="Top" Height="34" Width="82" Click="SignUp_Click" Grid.Column="1" Background="White" BorderBrush="Black">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="ReturnB" Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="27" Width="68" Click="ReturnB_Click" Background="White" BorderBrush="Black">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <TextBox x:Name="txt1" Text="{Binding login, UpdateSourceTrigger=PropertyChanged}" ToolTip ="{Binding RelativeSource={RelativeSource Mode=Self}, Path = (Validation.Errors)[0].ErrorContent}" HorizontalAlignment="Center" Margin="0,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Grid.Column="1" Height="22" FontSize="14"/>

        <Label x:Name="label_login" Content="Login" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.469,0.025" Width="46" Background="{x:Null}" FontSize="14" Grid.Column="1" Foreground="White"/>

        <Label x:Name="label_password" Content="Password" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.469,0.025" Grid.Column="1" Background="{x:Null}" FontSize="14" Foreground="White"/>

        <Label x:Name="main_label" Content="Authorization" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontSize="20" Grid.Column="1"/>
        <!-- <PasswordBox x:Name="pass" PasswordChanged="pass_PasswordChanged"> -->
        <PasswordBox x:Name="pass" HorizontalAlignment="Center" Margin="0,230,0,0" VerticalAlignment="Top" Height ="22" Width="180" PasswordChar="●" Grid.Column="1">
            <i:Interaction.Behaviors>
                <local:PasswordBoxBehavior 
            BoundPassword="{Binding pswrd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </i:Interaction.Behaviors>
        </PasswordBox>
        <Button x:Name="show_password" Content="" HorizontalAlignment="Left" Margin="0,232,0,0" VerticalAlignment="Top" Width="26" Click="show_password_Click" BorderBrush="White" RenderTransformOrigin="-8.115,-2.202" Grid.Column="2">
            <Button.Background>
                <ImageBrush ImageSource="/OpenEye.jpg"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>

                </ControlTemplate>
            </Button.Template>
        </Button>
        <!-- <TextBox x:Name="pass1" TextChanged="pass1_PasswordChanged"> -->
        <TextBox x:Name="pass1" Text="{Binding pswrd, UpdateSourceTrigger=PropertyChanged}" ToolTip ="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Mode=Self}}" HorizontalAlignment="Center" Margin="0,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height ="22" Width="180" HorizontalScrollBarVisibility="Visible" Grid.Column="1" FontSize="14" Visibility="Hidden"/>
        <Button x:Name="hide_password" Content="" HorizontalAlignment="Left" Margin="0,232,0,0" VerticalAlignment="Top" Width="26" Click="hide_password_Click" BorderBrush="White" Grid.Column="2" Visibility="Hidden">
            <Button.Background>
                <ImageBrush ImageSource="/ClosedEye.jpg"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>

                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Window>
