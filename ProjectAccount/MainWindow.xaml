<Window x:Class="ProjectAccount.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAccount"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid OpacityMask="Black" Background="#FF5F91B7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="138"/>
            <ColumnDefinition Width="524"/>
            <ColumnDefinition Width="138"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="WLogIn" Content="Log In" HorizontalAlignment="Left" Height="32" Margin="42,272,0,0" VerticalAlignment="Top" Width="85" Click="WLogIn_Click" Grid.Column="1" Background="White" BorderBrush="Black">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="WSignUp" Content="Sign Up" HorizontalAlignment="Left" Margin="132,272,0,0" VerticalAlignment="Top" Width="85" Height="32" Click="WSignUp_Click" Grid.Column="1" Background="White" BorderBrush="Black">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="aLogIn" Content="Log In" HorizontalAlignment="Left" Margin="356,272,0,0" VerticalAlignment="Top" Width="86" Height="31" Click="aLogIn_Click" Grid.Column="1" Background="White" BorderBrush="Black">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label x:Name="main_label" BorderThickness ="1" Content="ПРОГРАМНЕ ЗАБЕЗПЕЧЕННЯ ОБЛІКУ РЕМОНТІВ ОБЛАДНАННЯ МАЛОГО ПІДПРИЄМСТВА" Margin="0,100,0,0" VerticalAlignment="Top" Background="White" BorderBrush="Black" OpacityMask="Black" Width="524" HorizontalAlignment="Center" FontFamily="Segoe UI Semibold" Height="26" Grid.Column="1"/>
        <Rectangle HorizontalAlignment="Left" Height="128" Margin="0,205,0,0" Stroke="Black" VerticalAlignment="Top" Width="254" Grid.Column="1"/>
        <Rectangle HorizontalAlignment="Left" Height="128" Margin="270,205,0,0" Stroke="Black" VerticalAlignment="Top" Width="254" Grid.Column="1"/>
        <Label x:Name="worker_label" BorderThickness ="1" Content="Worker/Master" HorizontalAlignment="Left" Margin="73,222,0,0" VerticalAlignment="Top" Background="{x:Null}" Grid.Column="1" Height="29" Width="108" FontSize="14" Foreground="White"/>
        <Label x:Name="manager_label" BorderThickness ="1" Content="Manager" HorizontalAlignment="Left" Margin="365,222,0,0" VerticalAlignment="Top" Background="{x:Null}" Grid.Column="1" Height="30" Width="68" FontSize="14" Foreground="White"/>
    </Grid>
</Window>
