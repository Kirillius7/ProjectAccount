<Window x:Class="ProjectAccount.WorkerSignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectAccount"
        mc:Ignorable="d"
        Title="WorkerSignUp" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF5F91B7">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175"/>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition Width="175"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="ConfirmB" Command ="{Binding AddWorkerCommand}" Content="Confirm" HorizontalAlignment="Left" Margin="139,280,0,0" VerticalAlignment="Top" Width="86" Height="31" Grid.Column="1" Background="White" BorderBrush="Black">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="Clear" Content="Clear" HorizontalAlignment="Left" Margin="230,280,0,0" VerticalAlignment="Top" Width="86" Height="31" Click="Clear_Click" Grid.Column="1" BorderBrush="Black" Background="White">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="ReturnB" Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="ReturnB_Click" Height="27" Width="68" Background="White" BorderBrush="Black">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="LightGray" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="buttonBorder" Property="Background" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <TextBox x:Name="txt1" Text="{Binding name, UpdateSourceTrigger=PropertyChanged}" ToolTip ="{Binding RelativeSource={RelativeSource Mode=Self}, Path = (Validation.Errors)[0].ErrorContent}" HorizontalAlignment="Left" Margin="18,140,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="180" Height="22" Grid.Column="1" FontSize="14"/>

        <TextBox x:Name="txt2" Text="{Binding login, UpdateSourceTrigger=PropertyChanged}" ToolTip ="{Binding RelativeSource={RelativeSource Mode=Self}, Path = (Validation.Errors)[0].ErrorContent}" HorizontalAlignment="Left" Margin="18,230,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="180" Height="22" Grid.Column="1" FontSize="14"/>

        <ComboBox x:Name="cmbBox" Text="{Binding occupation, UpdateSourceTrigger=PropertyChanged}" ToolTip ="{Binding RelativeSource={RelativeSource Mode=Self}, Path = (Validation.Errors)[0].ErrorContent}" HorizontalAlignment="Left" Margin="257,230,0,0" VerticalAlignment="Top" Width="180" Height="24" Grid.Column="1" FontSize="14" BorderBrush="White" Foreground="Black">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <ComboBoxItem Content="Electrician" />
            <ComboBoxItem Content="Plumber" />
            <ComboBoxItem Content="Programmer" />
            <ComboBoxItem Content="Welder" />
            <ComboBoxItem Content="Mechanic" />
            <ComboBoxItem Content="Carpenter" />
            <ComboBoxItem Content="Auto Mechanic" />
            <ComboBoxItem Content="HVAC Technician" />
            <ComboBoxItem Content="Locksmith" />
            <ComboBoxItem Content="Computer Technician" />
        </ComboBox>

        <Label x:Name="label_Name" BorderThickness ="1" Content="Name" HorizontalAlignment="Left" Margin="83,110,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.469,0.025" Grid.Column="1" Width="50" Background="{x:Null}" FontSize="14" Height="29" Foreground="White"/>

        <Label x:Name="label_login" BorderThickness ="1" Content="Login" HorizontalAlignment="Left" Margin="85,198,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.469,0.025" Width="46" Background="{x:Null}" FontSize="14" Grid.Column="1" Height="31" Foreground="White"/>

        <Label x:Name="label_password" BorderThickness ="1" Content="Password" HorizontalAlignment="Left" Margin="311,110,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.469,0.025" Width="74" Grid.Column="1" Background="{x:Null}" Foreground="White" Height="31" FontSize="14"/>

        <Label x:Name="label_occupation" BorderThickness ="1" Content="Occupation" HorizontalAlignment="Left" Margin="304,198,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.469,0.025" Grid.Column="1" Width="86" Background="{x:Null}" Foreground="White" Height="31" FontSize="14"/>

        <Label x:Name="main_label" Content="Registration" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontSize="20" Grid.Column="1"/>
        <PasswordBox x:Name="pass" PasswordChanged="pass_PasswordChanged" HorizontalAlignment="Left" Margin="257,140,0,0" VerticalAlignment="Top" Height ="22" Width="180" PasswordChar="●" Grid.Column="1"/>
        <Button x:Name="show_password" Content="" HorizontalAlignment="Left" Margin="0,142,0,0" VerticalAlignment="Top" Width="26" Click="show_password_Click" BorderBrush="White" RenderTransformOrigin="-8.115,-2.202" Grid.Column="2">
            <Button.Background>
                <ImageBrush ImageSource="/OpenEye.jpg"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>

                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBox x:Name="pass1" TextChanged="pass1_PasswordChanged" Text="{Binding pswrd, UpdateSourceTrigger=PropertyChanged}" ToolTip ="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Mode=Self}}" HorizontalAlignment="Left" Margin="257,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height ="22" Width="180" HorizontalScrollBarVisibility="Visible" Grid.Column="1" FontSize="14" Visibility="Hidden"/>
        <Button x:Name="hide_password" Content="" HorizontalAlignment="Left" Margin="0,142,0,0" VerticalAlignment="Top" Width="26" Click="hide_password_Click" BorderBrush="White" Grid.Column="2" Visibility="Hidden">
            <Button.Background>
                <ImageBrush ImageSource="/ClosedEye.jpg"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="buttonBorder" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>

                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Window>
